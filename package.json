    "@types/sodium-native": "^2.3.5",
    "@types/sqlite3": "^3.1.6",
    "ajv": "^6.12.3",
    "assert": "^2.0.0",
    "body-parser": "^1.19.0",
    "crc": "^3.8.0",
    "express": "^4.17.1",
